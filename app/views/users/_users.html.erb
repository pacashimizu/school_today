    <% if users.any? %>
      <% users.each do |user| %>
        <div class="card mb-1" style="max-widh: 540px;">
          <div class="row g-0">
            <div class="col-4">
              <% if user.image? %>
                <%= image_tag user.image.url, size: "100x100", class: "card-img" %>
              <% end %>
            </div>
            <div class="col-8">
              <div class="card-body d-flex">
                <div class="col-9">
                  <p class="card-text"><span class="badge bg-secondary text-light rounded-pill"><%= user.grade.name %></span></p>
                  <h4 class="card-title"><%= user.name %></h4>
                  <p class="card-text">ID: <%= user.login_id %></p>
                </div>
                <div class="col-3 d-flex flex-column gap-1 justify-content-center">
                  <%= link_to "編集", edit_user_path(user), class: "btn btn-outline-secondary btn-sm rounded-pill" %>
                  <%= link_to "削除", user, method: :delete, data: { confirm: "ユーザを削除してよいですか？" }, class: "btn btn-danger btn-sm rounded-pill" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>